<div class="container p-4">
    <div class="row">
        {{#each barberias}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">

                    <h3>{{Nombre}} </h3>

                </div>
                <div class="card-body">
                    <p class="m-2">{{NIT}}</p>
                    <p class="m-2">{{Valoracion}}</p>
                    <p class="m-2">{{Municipio}}</p>
                </div>
            </div>
            <br>
        </div>
        {{else}}
        <div class="row md-4 mx-auto">
            <div class="text-center">
                <p style="font-size: 2em;">No tienes ningún cliente agregado.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center">
                <a href="/addServices" class="btn btn-success btn-block">¡Agrega una barbería!</a>
            </div>
        </div>
    </div>
</div>