<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Agrega tu barbería</h3>
                </div>
                <div class="card-body">
                    <form action="/addBarberia" method="POST">
                        <div class="form-group">
                            <input required type="number" name="NIT" placeholder="ID" class="form-control"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input required type="text" name="Nombre" placeholder="Nombre" class="form-control"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Direccion" placeholder="Dirección" class="form-control">
                        </div>
                        <div class="form-group">
                            <input required type="number" name="Municipio" placeholder="Municipio" class="form-control">
                        </div>
                        <div class="form-group">
                            <input required type="text" name="Celular" placeholder="Número telefónico"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <input required type="text" name="Valoracion" placeholder="Valoracion"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Agregar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>