<div class="container p-4">
    <div class="row">
        {{#each clientes}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-header">

                    <h3>{{PrimerNombre}} {{SegundoNombre}} {{PrimerApellido}} {{SegundoApellido}} </h3>

                </div>
                <div class="card-body">
                    <p class="m-2">{{Identificacion}}</p>
                    <p class="m-2">{{Celular}}</p>
                    <p class="m-2">{{Direccion}}</p>
                    <a href="/deleteCliente/{{Identificacion}}" class="btn btn-danger">Eliminar</a>
                    <a href="/editCliente/{{Identificacion}}" class="btn btn-secondary">Editar</a>
                </div>
            </div>
            <br>
        </div>
        {{else}}
        <div class="row md-4 mx-auto">
            <div class="text-center">
                <p style="font-size: 2em;">No tienes ningún cliente agregado.</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center">
                <a href="/addCliente" class="btn btn-success btn-block">¡Agrega un cliente!</a>
            </div>
        </div>
    </div>
</div>